<Window x:Class="VarejoSimples.Views.PDV.PDV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VarejoSimples.Views.PDV"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="PDV" d:DesignHeight="600" d:DesignWidth="1024">
    <Grid Background="#FFFDFDFD">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="429"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="#FF999999" BorderThickness="0,0,0,2" Height="40" VerticalAlignment="Top" Background="#FFE6E6E6" Grid.ColumnSpan="2">
            <Grid>
                <Label x:Name="label" Content="Curae PDV" Margin="384,0" FontSize="20" HorizontalContentAlignment="Center"/>
                <Button x:Name="btMenu" HorizontalAlignment="Left" Width="50" BorderBrush="#FF999999" Margin="0,0,0,-2" BorderThickness="1,1,1,2" Background="#FFDEDEDE">
                    <Button.Content>
                        <StackPanel>
                            <Image Source="/Curae Varejo (Simples);component/Images/pdv_menu_black.png" Height="33" Width="42" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Border>
        <Border BorderBrush="#FF999999" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Margin="0,40,0,0" Width="2"/>
        <Border BorderBrush="#FF999999" BorderThickness="0,0,0,2" Grid.Column="1" Height="165" Margin="2,40,0,0" VerticalAlignment="Top">
            <Grid Margin="1">
                <Label x:Name="label1" Content="Produto (F3 - Abrir consulta)" VerticalAlignment="Top" Margin="10,4,5,0" FontSize="20" Padding="0"/>
                <TextBox x:Name="txProduto" KeyDown="txProduto_KeyDown" Height="38" Margin="10,32,10,0" VerticalAlignment="Top" Background="#FFF7F7F7" HorizontalContentAlignment="Center" FontSize="24"/>
                <Border BorderBrush="#FF999999" BorderThickness="1" Height="73" Margin="10,0,0,6" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="161">
                    <Grid Margin="1">
                        <Label x:Name="label2" Content="Quantidade" VerticalAlignment="Top" Margin="10,0" FontSize="20" Padding="0"/>
                        <TextBox x:Name="txQuant" Height="38" Margin="10,27,10,0" VerticalAlignment="Top" Background="#FFF7F7F7" HorizontalContentAlignment="Right" FontSize="24" Text="1"/>
                    </Grid>
                </Border>
                <Border BorderBrush="#FF999999" BorderThickness="1" Height="73" Margin="0,0,10,6" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="239">
                    <Grid Margin="1">
                        <Label x:Name="label3" Content="Total item (R$)" VerticalAlignment="Top" Margin="10,0" FontSize="20" Padding="0"/>
                        <TextBox x:Name="lbTotalItem" Height="38" Margin="10,27,10,0" VerticalAlignment="Top" Background="#FFF7F7F7" HorizontalContentAlignment="Right" FontSize="24" Text="1"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <Border BorderBrush="#FF999999" BorderThickness="0,0,0,2" Grid.Column="1" Height="193" Margin="2,312,0,0" VerticalAlignment="Top">
            <Grid>
                <Button x:Name="btCancelarItem" Content="Cancelar item [F1]" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="133" Height="53" FontSize="14.667"/>
                <Button x:Name="button_Copy1" Content="Desconto [F2]" HorizontalAlignment="Left" Margin="148,10,0,0" VerticalAlignment="Top" Width="135" Height="53" FontSize="14.667" RenderTransformOrigin="0.535,0.528"/>
                <Button x:Name="btPagamento" Content="Pagamento [F6]" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="133" Height="53" FontSize="14.667" Click="btPagamento_Click"/>
                <Button x:Name="button_Copy3" Content="Cliente [F4]" HorizontalAlignment="Left" Margin="288,10,0,0" VerticalAlignment="Top" Width="129" Height="53" FontSize="14.667"/>
                <Button x:Name="btNFCe" Content="NFC-e [F9]" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Width="133" Height="53" FontSize="14.667" Click="btNFCe_Click"/>
                <Button x:Name="btNaoFiscal" Content="Impressão [F10]" HorizontalAlignment="Left" Margin="148,128,0,0" VerticalAlignment="Top" Width="135" Height="53" FontSize="14.667" />
                <Button x:Name="btNaoFiscal_Copy" Content="Encerrar [F11]" HorizontalAlignment="Left" Margin="288,128,0,0" VerticalAlignment="Top" Width="129" Height="53" FontSize="14.667" />
                <Button x:Name="btNaoFiscal_Copy1" Content="Importar&#xA;pedido [F7]" HorizontalAlignment="Left" Margin="148,68,0,0" VerticalAlignment="Top" Width="135" Height="53" FontSize="14.667"/>
                <Button x:Name="btNaoFiscal_Copy2" Content="Salvar como&#xA;pedido [F8]" HorizontalAlignment="Left" Margin="288,68,0,0" VerticalAlignment="Top" Width="129" Height="53" FontSize="14.667" />
            </Grid>
        </Border>
        <Border BorderBrush="#FF999999" BorderThickness="0,0,0,2" Grid.Column="1" Height="107" Margin="2,205,0,0" VerticalAlignment="Top">
            <Grid>
                <Label x:Name="label1_Copy" Content="CLIENTE: NÃO INFORMADO" VerticalAlignment="Top" Margin="7,6,10,0" FontSize="20" Padding="0"/>
                <Label x:Name="label1_Copy1" Content="CPF:" VerticalAlignment="Top" Margin="7,38,10,0" FontSize="20" Padding="0"/>
                <Label x:Name="label1_Copy2" Content="CRÉDITO: 0,00" VerticalAlignment="Top" Margin="7,65,10,0" FontSize="20" Padding="0"/>
            </Grid>
        </Border>
        <Grid x:Name="GridContainer" Margin="0,40,0,0"/>

    </Grid>
</Window>
