                <Label x:Name="lbId_Copy2" Content="|" HorizontalContentAlignment="Center" FontSize="18" Padding="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="277,0,0,7" Width="8" />

            </Grid>
        </Border>
