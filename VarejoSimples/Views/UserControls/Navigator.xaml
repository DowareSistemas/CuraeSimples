<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VarejoSimples.Views.UserControls"
             xmlns:Obselete="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" x:Class="VarejoSimples.Views.UserControls.Navigator"
             mc:Ignorable="d" Background="White" Width="160" Height="25">
    <Grid>

        <Obselete:MaskedTextBox HorizontalContentAlignment="Right"  Mask="0000" FontSize="15" x:Name="maskedTextBox" Margin="50,0" TextWrapping="NoWrap" Text="MaskedTextBox" Padding="0,4,0,0"/>
        <Button x:Name="btPrev" Content="&lt;" HorizontalAlignment="Left" Width="45"/>
        <Button x:Name="btNext" Content="&gt;" Width="45" HorizontalAlignment="Right"/>

    </Grid>
</UserControl>
